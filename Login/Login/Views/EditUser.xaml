<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.EditUser">
    <StackLayout>
        <Label Text="Username" />
        <Entry x:Name="username" Text="{Binding username}" />
        <Label Text="Is Admin" />
        <Switch x:Name="isAdmin" IsToggled="{Binding isAdmin}" HorizontalOptions="Start"/>
        <Button Text="Update" Clicked="Button_Clicked"/>
        <Button Text="Delete" BackgroundColor="Red" Clicked="Button_Clicked_1"/>
    </StackLayout>
</ContentPage>