<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  Padding="15" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.EditUser">
    <StackLayout>
        <Label Text="Edit User" FontSize="Title"/>

        <StackLayout Orientation="Horizontal">
            <Label Text="Address: " FontAttributes="Bold" />
            <Label x:Name="address"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Password: " FontAttributes="Bold" />
            <Label x:Name="password" />
        </StackLayout>

        <BoxView WidthRequest="100" HeightRequest="1" Color="Black" Margin="0,10,0,10"/>

        <Label Text="Username" FontSize="Medium"/>
        <Entry x:Name="username" />
        <Label Text="Is Admin" FontSize="Medium" />
        <Switch x:Name="isAdmin" HorizontalOptions="Start"/>
        <Button Text="Update" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>