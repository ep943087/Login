<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="15" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.AddCategory">
    <StackLayout>
        <Label Text="Add Category" FontSize="Title"/>
        <Entry Placeholder="Category Name" x:Name="category_name"/>
        <Button Text="Submit" x:Name="Submit" Clicked="Submit_Clicked"/>
    </StackLayout>
</ContentPage>