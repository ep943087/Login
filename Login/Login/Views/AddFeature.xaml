<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.AddFeature">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add User" FontSize="Title" />
            <Entry x:Name="feature_description" Placeholder="Feature Name" />
            <Entry x:Name="feature_price" Placeholder="Price" Keyboard="Numeric" />
            <Button Text="Submit" x:Name="submit" Clicked="submit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>