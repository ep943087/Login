<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.MainPage">
    <StackLayout>
        <StackLayout HorizontalOptions="End">
            <Button Text="Register" Clicked="Button_Clicked"/>
        </StackLayout>
        <Entry Placeholder="username" x:Name="username" />
        <Entry Placeholder="password" x:Name="password" IsPassword="True"/>
        <Button Text="Login" Clicked="Button_Clicked_1"/>
    </StackLayout>

</ContentPage>
