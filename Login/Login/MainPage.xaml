<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasBackButton="False" Padding="15"  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.MainPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Login" FontSize="Title" HorizontalOptions="Start"/>
            <Button Text="Register" Clicked="Button_Clicked" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
        <Entry Placeholder="username" x:Name="username" />
        <Entry Placeholder="password" x:Name="password" IsPassword="True"/>
        <Button Text="Login" Clicked="Button_Clicked_1"/>
    </StackLayout>

</ContentPage>
